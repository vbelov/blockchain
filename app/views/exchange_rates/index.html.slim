= simple_form_for :exchange_rates, url: exchange_rates_path, method: :get, html: { class: 'form-inline' }, wrapper: :inline_form do |f|
  = f.input :stock_name, collection: stock_names, label: 'Биржа', selected: stock_name, include_blank: 'Все'
  = f.input :pair, collection: list_of_pairs, label: 'Пара', selected: pair
  = f.input :volume, as: :numeric, label: 'Объем', input_html: {value: volume}, autofocus: true
  = f.button :submit, 'Обновить'

br
- @messages.each do |message|
  .alert.alert-success= message

table.table.table-striped
  thead
    tr
      th Биржа
      th Пара
      th Цена покупки
      th Цена продажи
  tbody
    - @rows.each do |row|
      tr
        td= row.stock
        td= row.pair.slashed_code
        td class=highlight_arbitrage(row, :buy) = fr(row.buy_rate)
        td class=highlight_arbitrage(row, :sell) = fr(row.sell_rate)
